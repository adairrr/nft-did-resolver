{
  "compilerOptions": {
    "target": "ES2018",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
  ],
}
